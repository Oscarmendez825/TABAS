<?xml version="1.0" encoding="utf-8" ?> 

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#597A88">

    <TextView
            android:text="TABAS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3E4465"
            android:background="#C09891"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"/>
    <TextView
            android:text="App Móvil para Trabajadores"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3E4465"
            android:background="#C09891"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
    <TextView
            android:text="Ingrese con una cuenta existente"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3E4465"
            android:background="#BEA8A7"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
     <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Número de cédula"
            android:id="@+id/signInId" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Constraseña"
            android:id="@+id/signInPassword"/>
    <Button
            android:text="Iniciar Sesión"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#405863"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

</LinearLayout>