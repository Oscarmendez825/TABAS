<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#597A88"
       android:weightSum="100">

    <TextView
            android:text="TABAS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#3E4465"
            android:background="#C09891"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"/>
    <TextView
            android:text="App Móvil para Trabajadores"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#3E4465"
            android:background="#C09891"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
    <TextView
            android:text="Ingrese con una cuenta existente"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="#3E4465"
            android:background="#BEA8A7"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
     <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Número de cédula"
            android:id="@+id/signInId"
            android:layout_weight="25"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Constraseña"
            android:id="@+id/signInPassword"
            android:layout_weight="25"/>
    <Button
            android:text="Iniciar Sesión"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/btnSignIn"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ButtonStyle" 
            android:textColor="#405863"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textStyle="bold"/>

</LinearLayout>
  